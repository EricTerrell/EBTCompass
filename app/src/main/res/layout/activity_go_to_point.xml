<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ericbt.ebtcompass.activities.GoToPointActivity"
    android:orientation="vertical"
    android:layout_margin="4dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/point_activity_hint"
        android:layout_margin="15sp"
        android:background="@color/light_gray"
        style="@style/HintText"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude:"
        android:layout_marginTop="20sp"
        style="@style/BoldText"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:id="@+id/latitude_degrees"
            android:inputType="number"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="°"
            />

        <EditText
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:id="@+id/latitude_minutes"
            android:inputType="number"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="'"
            />

        <EditText
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:id="@+id/latitude_seconds"
            android:inputType="number"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            />

        <EditText
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:id="@+id/latitude_fractional_seconds"
            android:inputType="number"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&quot;"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/latitude_direction"
            android:id="@+id/latitude_direction"
            />

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="50sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude:"
        style="@style/BoldText"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:id="@+id/longitude_degrees"
            android:inputType="number"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="°"
            />

        <EditText
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:id="@+id/longitude_minutes"
            android:inputType="number"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="'"
            />

        <EditText
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:id="@+id/longitude_seconds"
            android:inputType="number"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            />

        <EditText
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:id="@+id/longitude_fractional_seconds"
            android:inputType="number"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&quot;"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/longitude_direction"
            android:id="@+id/longitude_direction"
            />

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="100sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/cancel"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:layout_marginRight="10sp"
            />

        <Button
            android:id="@+id/go"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Go"
            />

    </LinearLayout>

</LinearLayout>