<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.ericbt.ebtcompass.activities.GoToPointActivity"
        android:orientation="vertical"
        android:layout_margin="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginBottom="25sp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:layout_marginTop="20sp"
                style="@style/BoldText"
                android:layout_gravity="top"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:layout_weight="1"
                android:layout_marginLeft="20sp"
                android:layout_gravity="bottom"
                android:hint="Name of point - required"
                android:inputType="text"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/latLong"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude:"
                android:layout_marginTop="20sp"
                style="@style/BoldText"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <EditText
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/latitude_degrees"
                    android:inputType="number"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="°"
                    />

                <EditText
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/latitude_minutes"
                    android:inputType="number"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="'"
                    />

                <EditText
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/latitude_seconds"
                    android:inputType="number"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    />

                <EditText
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/latitude_fractional_seconds"
                    android:inputType="number"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&quot;"
                    />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/latitude_direction"
                    android:id="@+id/latitude_direction"
                    />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="50sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longitude:"
                style="@style/BoldText"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <EditText
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/longitude_degrees"
                    android:inputType="number"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="°"
                    />

                <EditText
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/longitude_minutes"
                    android:inputType="number"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="'"
                    />

                <EditText
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/longitude_seconds"
                    android:inputType="number"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    />

                <EditText
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/longitude_fractional_seconds"
                    android:inputType="number"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&quot;"
                    />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/longitude_direction"
                    android:id="@+id/longitude_direction"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/utm"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/longitude_zone_heading"
                android:layout_marginTop="20sp"
                style="@style/BoldText"
                />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/longitude_zone_values"
                android:id="@+id/longitude_zone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/latitude_zone_heading"
                android:layout_marginTop="20sp"
                style="@style/BoldText"
                />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/latitude_zone_values"
                android:id="@+id/latitude_zone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Easting:"
                android:layout_marginTop="20sp"
                style="@style/BoldText"
                />

            <EditText
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:id="@+id/easting"
                android:inputType="number"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Northing:"
                android:layout_marginTop="20sp"
                style="@style/BoldText"
                />

            <EditText
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:id="@+id/northing"
                android:inputType="number"
                />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color:" />

            <Spinner
                android:id="@+id/color"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/color_entries"
                android:entryValues="@array/color_values" >
            </Spinner>

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/cancel"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:layout_marginRight="10sp"
                />

            <Button
                android:id="@+id/save"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="Save"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>